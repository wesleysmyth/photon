/*---GLOBAL---*/
*, *:before, *:after
  -webkit-box-sizing border-box
  -moz-box-sizing border-box
  box-sizing border-box

body
  background-color #F0F0F0
  margin 0
  font-family Helvetica
  color #00000C
  
h1, h2, h3, h4, h5, h6, ul, li
  margin 0
  padding 0
  
button, input[type=submit]
  background #398999
  border-radius 4px
  border none
  padding 5px
  color white
  font-size 12px
  cursor pointer

.center-text
  text-align center
  
.center-block
  display block
  margin 0 auto

.hide
  display none

.vertical-space
  margin 10px auto
  
.vertical-padding
  padding 10px 0
  
/*---SIDEBAR---*/
.sidebar
  width 20%
  position fixed
  top 0
  bottom 0
  background-color #E4E4E4
  
.collection-header
  background-color #FC5656

.collection-title
  width 75%
  display inline-block
  margin-left 10px

.sidebar-li
  list-style none
  border-bottom 1px solid #D0D0D0
  
.plus-sign
  width 50px
  cursor pointer
    
/*---MAIN---*/
.main
  width 80%
  position absolute
  top 0
  bottom 0
  right 0

.photo-wrapper
  display inline-block
  margin 5px
  
.photo 
  border-radius 2px
                
/*---MODAL---*/
.modal
  position absolute
  left 0
  right 0
  top 100px
  margin 0 auto
  width 50%
  max-width 630px
  min-width 220px
  z-index 2000
  -webkit-backface-visibility hidden
  -moz-backface-visibility hidden
  backface-visibility hidden
  visibility hidden

.modal-content
  background #FAFAFA
  border-radius 4px
  margin 0 auto
  padding 10px
  opacity 0
  -webkit-transform scale(0.7)
  -moz-transform scale(0.7)
  -ms-transform scale(0.7)
  transform scale(0.7)
  -webkit-transition all .3s
  -moz-transition all .3s
  transition all .3s
  
.modal.active
  visibility visible
  
  .modal-content
    -webkit-transform scale(1)
    -moz-transform scale(1)
    -ms-transform scale(1)
    transform scale(1)

.modal.active ~ .modal-overlay
  opacity 1
  visibility visible

.modal-overlay
  position fixed
  top 0
  left 0
  width 100%
  height 100%
  opacity 0
  z-index 1000
  visibility hidden
  background rgba(0,0,0,0.4)
  -webkit-transition all .3s
  -moz-transition all .3s
  transition all .3s

.show-opaque
  opacity 1

.photo-preview
  width 100px
  height 100px
